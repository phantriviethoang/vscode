{
	// ===========================================
	// EDITOR
	// ===========================================
	"editor.fontSize": 15,
	"editor.lineHeight": 30,
	"editor.fontWeight": "500",
	"editor.fontFamily": "JetBrains Mono, Maple Mono, GeistMono Nerd Font Mono,Dank Mono",
	// "editor.fontLigatures": true,
	"editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'calt', 'dlig'",
	// "editor.fontLigatures": "'calt', 'zero', 'ss03'",
	"editor.tabSize": 4,
	"editor.insertSpaces": true,
	"editor.detectIndentation": false,
	"editor.wordWrap": "wordWrapColumn",
	"editor.copyWithSyntaxHighlighting": false,
	"editor.linkedEditing": true,
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.autoClosingBrackets": "always",
	"editor.autoClosingQuotes": "always",
	"editor.autoIndent": "advanced",
	"editor.autoIndentOnPaste": true,
	"editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
	"editor.semanticHighlighting.enabled": true,
	// ===========================================
	// EDITOR UI
	// ===========================================
	"editor.lineNumbers": "off",
	"editor.minimap.enabled": false,
	"editor.minimap.maxColumn": 250,
	"editor.glyphMargin": false,
	"editor.scrollbar.vertical": "hidden",
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.verticalScrollbarSize": 0,
	"editor.codeLens": false,
	// "editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": false,
	"editor.guides.indentation": false,
	"editor.inlayHints.enabled": "off",
	"editor.renderLineHighlight": "none",
	"editor.renderControlCharacters": false,
	"editor.overviewRulerBorder": false,
	"editor.hideCursorInOverviewRuler": true,
	"editor.selectionHighlight": false,
	"editor.occurrencesHighlight": "off",
	"editor.matchBrackets": "never",
	"editor.hover.enabled": true,
	"editor.lightbulb.enabled": "off",
	"editor.padding.top": 10,
	"editor.stickyScroll.enabled": false,
	// "editor.cursorHeight": 22,
	"editor.cursorWidth": 2,
	"editor.cursorSurroundingLines": 5,
	"editor.cursorBlinking": "solid",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.smoothScrolling": true,
	"editor.scrollBeyondLastLine": true,
	// "editor.colorDecorators": false,
	// ===========================================
	// EDITOR SUGGESTIONS
	// ===========================================
	"editor.tabCompletion": "on",
	"editor.snippetSuggestions": "inline",
	"editor.suggest.snippetsPreventQuickSuggestions": false,
	"editor.inlineSuggest.suppressSuggestions": false,
	"editor.suggestFontSize": 16,
	"editor.suggestLineHeight": 30,
	"editor.quickSuggestions": {
		"strings": true,
		"other": true
	},
	"editor.screenReaderAnnounceInlineSuggestion": false,
	"editor.accessibilitySupport": "off",
	"editor.multiCursorModifier": "ctrlCmd",
	// ===========================================
	// EDITOR NAVIGATION
	// ===========================================
	"editor.gotoLocation.multipleReferences": "goto",
	"editor.gotoLocation.multipleDefinitions": "goto",
	"editor.gotoLocation.multipleDeclarations": "goto",
	"editor.gotoLocation.multipleImplementations": "goto",
	"editor.gotoLocation.multipleTypeDefinitions": "goto",
	// ===========================================
	// WORKBENCH
	// ===========================================
	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,
	"workbench.activityBar.location": "hidden",
	"workbench.sideBar.location": "right",
	"workbench.tree.indent": 15,
	"workbench.tree.enableStickyScroll": false,
	"workbench.tree.renderIndentGuides": "none",
	"workbench.list.smoothScrolling": true,
	"workbench.secondarySideBar.defaultVisibility": "hidden",
	"workbench.secondarySideBar.showLabels": false,
	"workbench.quickOpen.closeOnFocusLost": false,
	"workbench.layoutControl.enabled": false,
	"workbench.navigationControl.enabled": false,
	"workbench.panel.showLabels": false,
	// "workbench.editor.showTabs": "none",
	// "workbench.statusBar.visible": false,
	// ===========================================
	// WORKBENCH EDITOR TABS
	// ===========================================
	"workbench.editor.scrollToSwitchTabs": true,
	"workbench.editor.editorActionsLocation": "hidden",
	"workbench.editor.decorations.badges": false,
	"workbench.editor.enablePreviewFromCodeNavigation": true,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.openSideBySideDirection": "right",
	"workbench.editor.pinnedTabSizing": "compact",
	// ===========================================
	// WINDOW
	// ===========================================
	"window.newWindowDimensions": "inherit",
	"window.autoDetectColorScheme": false,
	"window.title": "${activeEditorShort}${separator}${activeFolderShort}",
	"window.density.editorTabHeight": "compact",
	"window.commandCenter": false,
	"window.menuBarVisibility": "toggle",
	"window.customTitleBarVisibility": "never",
	"window.titleBarStyle": "native",
	// ===========================================
	// FILES
	// ===========================================
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 500,
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.encoding": "utf8",
	"files.associations": {
		".php_cs": "php",
		".php_cs.dist": "php"
	},
	// ===========================================
	// EXPLORER
	// ===========================================
	"explorer.compactFolders": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmPasteNative": false,
	"explorer.confirmDelete": false,
	"explorer.fileNesting.patterns": {
		"*.ts": "${capture}.js",
		"*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
		"*.jsx": "${capture}.js",
		"*.tsx": "${capture}.ts",
		"tsconfig.json": "tsconfig.*.json",
		"package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
		"*.sqlite": "${capture}.${extname}-*",
		"*.db": "${capture}.${extname}-*",
		"*.sqlite3": "${capture}.${extname}-*",
		"*.db3": "${capture}.${extname}-*",
		"*.sdb": "${capture}.${extname}-*",
		"*.s3db": "${capture}.${extname}-*"
	},
	// ===========================================
	// SEARCH
	// ===========================================
	"search.searchOnType": false,
	"search.smartCase": true,
	"search.useIgnoreFiles": false,
	"search.exclude": {
		"**/vendor/{[^l],?[^ai]}*": true,
		"**/public/{[^i],?[^n]}*": true,
		"**/node_modules": true,
		"**/dist": true,
		"**/_ide_helper.php": true,
		"**/composer.lock": true,
		"**/package-lock.json": true,
		"storage": true,
		".phpunit.result.cache": true
	},
	// ===========================================
	// TERMINAL
	// ===========================================
	"terminal.integrated.fontSize": 16,
	"terminal.integrated.lineHeight": 1.5,
	"terminal.integrated.fontFamily": "JetBrains Mono, Maple Mono, GeistMono Nerd Font Mono,Dank Mono",
	"terminal.integrated.letterSpacing": 0,
	"terminal.integrated.enableMultiLinePasteWarning": "never",
	"terminal.integrated.suggest.enabled": true,
	"terminal.integrated.suggest.showStatusBar": false,
	"terminal.integrated.tabs.location": "left",
	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.cursorBlinking": true,
	// ===========================================
	// DIFF EDITOR
	// ===========================================
	"diffEditor.hideUnchangedRegions.enabled": true,
	"diffEditor.useInlineViewWhenSpaceIsLimited": false,
	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.wordWrap": "on",
	// ===========================================
	// DEBUG
	// ===========================================
	"debug.showBreakpointsInOverviewRuler": false,
	// ===========================================
	// SCM & GIT
	// ===========================================
	"scm.diffDecorations": "none",
	// "git.decorations.enabled": false,
	"git.confirmSync": false,
	// ===========================================
	// PROBLEMS
	// ===========================================
	"problems.decorations.enabled": false,
	// ===========================================
	// BREADCRUMBS
	// ===========================================
	"breadcrumbs.enabled": false,
	// ===========================================
	// CHAT & AI
	// ===========================================
	"chat.commandCenter.enabled": false,
	"chat.disableAIFeatures": true,
	"chat.editor.wordWrap": "on",
	// ===========================================
	// SECURITY
	// ===========================================
	"security.workspace.trust.untrustedFiles": "open",
	// ===========================================
	// EXTENSIONS
	// ===========================================
	"extensions.ignoreRecommendations": true,
	"extensions.experimental.affinity": {
		"vscodevim.vim": 1,
		"asvetliakov.vscode-neovim": 1
	},
	// ===========================================
	// EMMET
	// ===========================================
	"emmet.triggerExpansionOnTab": true,
	"emmet.showExpandedAbbreviation": "always",
	"emmet.includeLanguages": {
		"blade": "html",
		"vue-html": "html",
		"vue": "html",
		"react": "html",
		"javascript": "html"
	},
	// ===========================================
	// LANGUAGE SPECIFIC
	// ===========================================
	"php.suggest.basic": false,
	"php.format.rules.addCommaAfterLastArrayElement": false,
	"php.format.rules.blankLinesAfterOpenTag": 1,
	"php.format.rules.endWithNewLine": true,
	"php.format.rules.spaceBeforeColonInControlStatements": true,
	"php.format.rules.spaceBeforeColonInReturnType": false,
	"php.format.rules.spaceAfterUnaryNot": true,
	// ===========================================
	// LANGUAGE SPECIFIC
	// ===========================================
	"javascript.suggest.paths": false,
	"typescript.suggest.paths": false,
	// ===========================================
	// LANGUAGE SPECIFIC
	// ===========================================
	"html.format.extraLiners": "nul",
	"html.format.preserveNewLines": true,
	"vetur.format.options.tabSize": 4,
	"vetur.format.options.useTabs": true,
	// ===========================================
	// PRETTIER
	// ===========================================
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	// ===========================================
	// TAILWIND CSS
	// ===========================================
	"tailwindCSS.includeLanguages": {
		"plaintext": "html"
	},
	"tailwindCSS.experimental.configFile": null,
	// ===========================================
	// THIRD-PARTY EXTENSIONS
	// ===========================================
	// Auto Rename Tag
	"auto-rename-tag.activationOnLanguage": ["*"],
	// Blade formatter
	"blade.format.enable": true,
	"blade.format.wrapAttributes": "auto",
	// Live Server
	"liveServer.settings.CustomBrowser": "firefox",
	// New File
	"newFile.defaultBaseFileName": "index",
	"newFile.defaultFileExtension": ".jsx",
	"newFile.expandBraces": true,
	"newFile.relativeTo": "file",
	"newFile.rootDirectory": "~",
	"newFile.showPathRelativeTo": "project",
	// Quokka.js
	"quokka.automaticRestart": true,
	"quokka.fontSize": 16,
	"quokka.showOutputOnStart": false,
	"quokka.useOutputPanel": false,
	// ===========================================
	// VIM EXTENSION
	// ===========================================
	"vim.cursorStylePerMode.visualblock": "block-outline",
	"vim.cursorStylePerMode.visualline": "block-outline",
	"vim.cursorStylePerMode.visual": "block-outline",
	"vim.argumentObjectSeparators": [","],
	"vim.autoindent": true,
	"vim.camelCaseMotion.enable": true,
	"vim.changeWordIncludesWhitespace": false,
	"vim.easymotion": true,
	"vim.easymotionDimBackground": true,
	"vim.easymotionDimColor": "#888888",
	"vim.easymotionIncSearchForegroundColor": "#66cc66",
	"vim.easymotionKeys": "asdfghjkl;",
	"vim.easymotionMarkerFontWeight": "bold",
	"vim.easymotionMarkerForegroundColorOneChar": "#ff6666",
	"vim.easymotionMarkerForegroundColorTwoCharFirst": "#ffaa33",
	"vim.easymotionMarkerForegroundColorTwoCharSecond": "#ffdd77",
	"vim.foldfix": true,
	"vim.gdefault": false,
	"vim.highlightedyank.color": "#a9dc7660",
	"vim.highlightedyank.duration": 200,
	"vim.highlightedyank.enable": true,
	"vim.hlsearch": true,
	"vim.ignorecase": true,
	"vim.incsearch": true,
	"vim.inccommand": "replace",
	"vim.joinspaces": false,
	"vim.leader": "<space>",
	"vim.maxmapdepth": 1000,
	"vim.registers.useClipboard": true,
	"vim.replaceWithRegister": true,
	"vim.report": 2,
	"vim.searchMatchTextColor": "#bbbbbb",
	"vim.showcmd": true,
	"vim.showmodename": true,
	"vim.smartcase": true,
	"vim.sneak": true,
	"vim.sneakReplacesF": false,
	"vim.sneakUseIgnorecaseAndSmartcase": true,
	"vim.startInInsertMode": false,
	"vim.surround": true,
	"vim.textwidth": 80,
	"vim.timeout": 800,
	"vim.useCtrlKeys": true,
	"vim.useSystemClipboard": true,
	"vim.visualstar": true,
	// "vim.vimrc.path": "/home/viethoang/.vimrc",
	"vim.vimrc.path": "~/.vimrc",
	"vim.vimrc.enable": true,
	"vim.whichwrap": "b,s",
	"vim.handleKeys": {
		"<C-b>": true,
		"<C-c>": true,
		"<C-d>": true,
		"<C-h>": true,
		"<C-j>": true,
		"<C-m>": true,
		"<C-t>": true,
		"<C-v>": true
	},
	"vim.normalModeKeyBindings": [
		{
			"before": ["K"],
			"commands": ["lineBreakInsert"],
			"silent": true
		},
		{
			"before": ["<leader>", "h"],
			"commands": ["editor.action.showHover"]
		},
		{
			"before": ["<leader>", "n"],
			"commands": ["newFile.createNewFile"]
		},
		{
			"before": ["<C-,>"],
			"commands": [
				{
					"command": "cursorEnd"
				},
				{
					"command": "type",
					"args": {
						"text": ","
					}
				}
			]
		},
		{
			"before": ["<A-,>"],
			"commands": [
				{
					"command": "cursorEnd"
				},
				{
					"command": "type",
					"args": {
						"text": ","
					}
				},
				{
					"command": "editor.action.insertLineAfter"
				}
			]
		}
	],
	"vim.insertModeKeyBindingsNonRecursive": [
		{
			"before": ["<C-,>"],
			"after": ["<Esc>", "A", ",", "a"]
		}
	],
	// ===========================================
	// LANGUAGE FORMATTERS
	// ===========================================
	"[javascriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[blade]": {
		"editor.defaultFormatter": "shufo.vscode-blade-formatter",
		"editor.autoClosingBrackets": "always"
	},
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[php]": {
		"editor.defaultFormatter": "DEVSENSE.phptools-vscode"
	},
	"[snippets]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"workbench.colorTheme": "Moondust: Far Side of the Moon",
	"workbench.iconTheme": "material-icon-theme",
	"material-icon-theme.activeIconPack": "vue",
	// ===========================================
	// COLOR CUSTOMIZATIONS
	// ===========================================
	"workbench.colorCustomizations": {
		"titleBar.activeBackground": "#1a1c1e",
		"titleBar.inactiveBackground": "#1a1c1e",
		"titleBar.inactiveForeground": "#8b8b8b",
		"titleBar.border": "#1a1c1e",
		// "editorCursor.background": "#535254",
		// "editorCursor.foreground": "#aeafad",
		//   "editor.snippetTabstopHighlightBorder": "#786197",
		//   "editor.snippetTabstopHighlightBackground": "#bd93f933",
		// "editor.snippetFinalTabstopHighlightBorder": "#53c970",
		"editorGroupHeader.tabsBackground": "#1a1c1e",
		"editorGroup.border": "#1a1c1e",
		"editorGroupHeader.border": "#1a1c1e",
		"editorGroupHeader.tabsBorder": "#1a1c1e",
		"scrollbar.shadow": "#1a1c1e",
		"editor.background": "#1a1c1e",
		"tab.inactiveModifiedBorder": "#1a1c1e",
		"tab.border": "#1a1c1e",
		"tab.activeBackground": "#1a1c1e",
		// "tab.activeForeground": "#fff",
		// "tab.inactiveForeground": "#b4b4b4",
		"tab.inactiveBackground": "#1a1c1e",
		"tab.activeBorderTop": "#00000000",
		"tab.activeBorder": "#00000000",
		"statusBar.background": "#1a1c1e",
		"statusBar.border": "default",
		"statusBar.noFolderBackground": "#1a1c1e",
		"sideBar.background": "#1a1c1e",
		"sideBar.border": "#1a1c1e",
		"editorGutter.background": "#1a1c1e",
		"terminal.background": "#1a1c1e",
		"panelTitle.activeBorder": "#1a1c1e",
		"panel.background": "#1a1c1e",
		"panel.border": "#1a1c1e",
		"editor.findMatchHighlightBackground": "#00000000",
		"editor.findMatchHighlightBorder": "#444444",
		"editor.findMatchBackground": "#00000000",
		"editor.findMatchBorder": "#796747",
		"editor.wordHighlightBackground": "#1f2b3fc7",
		"editor.wordHighlightBorder": "#233149",
		"editor.wordHighlightStrongBackground": "#ffcc5522",
		"editor.wordHighlightStrongBorder": "#ffcc5517"
	},
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": "entity.other.attribute-name.html",
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				"scope": "entity.name.function, meta.function-call, variable.function",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "variable.parameter.function, variable.parameter",
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				"scope": "storage.type.function, storage.type.class, storage.type",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "entity.name.type, support.type, storage.type.class",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "entity.other.attribute-name.class.css, entity.other.attribute-name.id.css",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "support.type.property-name.css, keyword.other.unit.css",
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				"scope": "entity.name.selector, selector",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "comment, punctuation.definition.comment",
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				"scope": "constant.numeric, constant.character, constant.language",
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				"scope": "punctuation, keyword.operator",
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},
	// ===========================================
	// CUSTOM CSS
	// ===========================================
	"vscode_custom_css.imports": ["file://${userHome}/.config/Code/styles.css"],
	"[vue]": {
		"editor.defaultFormatter": "Vue.volar"
	},
	"vue.autoInsert.dotValue": true,
	"vue.editor.templateInterpolationDecorators": false,
	"vue.format.wrapAttributes": "force-expand-multiline",
	"Laravel.bladeComponent.hover": false,
	"bladeFormatter.format.noMultipleEmptyLines": true,
	"bladeFormatter.misc.dontShowNewVersionMessage": true,
	"bladeFormatter.format.sortHtmlAttributes": "custom",
	"bladeFormatter.format.sortTailwindcssClasses": true,
	"bladeFormatter.format.wrapAttributes": "force-expand-multiline",
	"cSpell.ignoreWords": [
		"alpinejs",
		"enderror",
		"endforeach",
		"endforelse",
		"endif",
		"endisset",
		"endsection",
		"forelse",
		"isset",
		"laravel",
		"linecap",
		"linejoin",
		"vite"
	],
	"splitHTMLAttributes.closingBracketOnNewLine": true,
	"splitHTMLAttributes.sortOrder": [
		[
			"^v-if",
			"^v-else",
			"^v-show",
			"^v-model",
			"^v-for",
			"^:key",
			"^key",
			"^v-",
			"^:",
			"^@click",
			"^@",
			"^id",
			"^class",
			"^.*=\""
		]
	],
	"splitHTMLAttributes.tabSize": 4
}
