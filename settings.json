{
	// EDITOR
	"editor.fontSize": 15,
	"editor.lineHeight": 30,
	"editor.fontWeight": "500",
	// "editor.fontFamily": "MonoLisa, JetBrains Mono, Maple Mono",
	"editor.fontFamily": "JetBrains Mono, MonoLisa, Maple Mono",
	// "editor.fontFamily": "Maple Mono",
	"editor.fontLigatures": "'ss03', 'calt', 'dlig'",
	"editor.detectIndentation": false,
	"editor.wordWrap": "wordWrapColumn",
	"editor.copyWithSyntaxHighlighting": false,
	"editor.linkedEditing": true,
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.autoClosingBrackets": "always",
	"editor.autoClosingQuotes": "always",
	"editor.autoIndent": "advanced",
	"editor.autoIndentOnPaste": true,
	"editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
	"editor.semanticHighlighting.enabled": true,
	// EDITOR UI
	"editor.lineNumbers": "off",
	"editor.minimap.enabled": false,
	"editor.minimap.maxColumn": 250,
	"editor.glyphMargin": false,
	"editor.scrollbar.vertical": "hidden",
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.verticalScrollbarSize": 0,
	"editor.codeLens": false,
	"editor.guides.indentation": false,
	"editor.inlayHints.enabled": "off",
	"editor.renderLineHighlight": "none",
	"editor.renderControlCharacters": false,
	"editor.overviewRulerBorder": false,
	"editor.hideCursorInOverviewRuler": true,
	"editor.selectionHighlight": false,
	"editor.occurrencesHighlight": "off",
	"editor.matchBrackets": "never",
	"editor.lightbulb.enabled": "off",
	"editor.padding.top": 3,
	"editor.stickyScroll.enabled": false,
	"editor.cursorWidth": 2,
	"editor.cursorSurroundingLines": 5,
	"editor.cursorBlinking": "smooth",
	// "editor.cursorBlinking": "solid",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.smoothScrolling": true,
	// EDITOR SUGGESTIONS
	"editor.tabCompletion": "on",
	"editor.suggestFontSize": 16,
	"editor.suggestLineHeight": 30,
	"editor.quickSuggestions": {
		"strings": true,
		"other": true
	},
	"editor.screenReaderAnnounceInlineSuggestion": false,
	"editor.accessibilitySupport": "off",
	"editor.multiCursorModifier": "ctrlCmd",
	// EDITOR NAVIGATION
	"editor.gotoLocation.multipleReferences": "goto",
	"editor.gotoLocation.multipleDefinitions": "goto",
	"editor.gotoLocation.multipleDeclarations": "goto",
	"editor.gotoLocation.multipleImplementations": "goto",
	"editor.gotoLocation.multipleTypeDefinitions": "goto",
	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,
	"workbench.activityBar.location": "hidden",
	"workbench.sideBar.location": "right",
	"workbench.tree.indent": 15,
	"workbench.tree.enableStickyScroll": false,
	"workbench.tree.renderIndentGuides": "none",
	"workbench.list.smoothScrolling": true,
	"workbench.secondarySideBar.defaultVisibility": "hidden",
	"workbench.secondarySideBar.showLabels": false,
	"workbench.quickOpen.closeOnFocusLost": false,
	"workbench.layoutControl.enabled": false,
	"workbench.panel.showLabels": false,
	"workbench.editor.editorActionsLocation": "hidden",
	"workbench.navigationControl.enabled": false,
	"window.commandCenter": false,
	"workbench.editor.showTabs": "none",
	"workbench.statusBar.visible": false,
	// WORKBENCH EDITOR TABS
	"workbench.editor.scrollToSwitchTabs": true,
	"workbench.editor.decorations.badges": false,
	"workbench.editor.enablePreviewFromCodeNavigation": true,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.pinnedTabSizing": "compact",
	// WINDOW
	"window.newWindowDimensions": "inherit",
	"window.title": "${activeEditorShort}${separator}${activeFolderShort}",
	"window.density.editorTabHeight": "compact",
	"window.menuBarVisibility": "toggle",
	"window.customTitleBarVisibility": "never",
	"window.titleBarStyle": "native",
	// FILES
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 500,
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.associations": {
		".php_cs": "php",
		".php_cs.dist": "php"
	},
	// EXPLORER
	"explorer.compactFolders": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmPasteNative": false,
	"explorer.confirmDelete": false,
	"explorer.fileNesting.patterns": {
		"*.ts": "${capture}.js",
		"*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
		"*.jsx": "${capture}.js",
		"*.tsx": "${capture}.ts",
		"tsconfig.json": "tsconfig.*.json",
		"package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
		"*.sqlite": "${capture}.${extname}-*",
		"*.db": "${capture}.${extname}-*",
		"*.sqlite3": "${capture}.${extname}-*",
		"*.db3": "${capture}.${extname}-*",
		"*.sdb": "${capture}.${extname}-*",
		"*.s3db": "${capture}.${extname}-*"
	},
	// SEARCH
	"search.searchOnType": false,
	"search.smartCase": true,
	"search.useIgnoreFiles": false,
	"search.exclude": {
		"**/vendor/{[^l],?[^ai]}*": true,
		"**/public/{[^i],?[^n]}*": true,
		"**/node_modules": true,
		"**/dist": true,
		"**/_ide_helper.php": true,
		"**/composer.lock": true,
		"**/package-lock.json": true,
		"storage": true,
		".phpunit.result.cache": true
	},
	// TERMINAL
	"terminal.integrated.fontSize": 16,
	"terminal.integrated.lineHeight": 1.5,
	"terminal.integrated.fontFamily": "JetBrains Mono, Maple Mono",
	"terminal.integrated.enableMultiLinePasteWarning": "never",
	"terminal.integrated.suggest.enabled": true,
	"terminal.integrated.suggest.showStatusBar": false,
	"terminal.integrated.tabs.location": "left",
	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.cursorBlinking": true,
	// DIFF EDITOR
	"diffEditor.hideUnchangedRegions.enabled": true,
	"diffEditor.useInlineViewWhenSpaceIsLimited": false,
	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.wordWrap": "on",
	// SCM & GIT
	"scm.diffDecorations": "none",
	// "git.decorations.enabled": false,
	"git.confirmSync": false,
	// PROBLEMS
	"problems.decorations.enabled": false,
	// BREADCRUMBS
	"breadcrumbs.enabled": false,
	// CHAT & AI
	"chat.commandCenter.enabled": false,
	"chat.disableAIFeatures": true,
	"chat.editor.wordWrap": "on",
	// SECURITY
	"security.workspace.trust.untrustedFiles": "open",
	// EXTENSIONS
	"extensions.ignoreRecommendations": true,
	// EMMET
	"emmet.triggerExpansionOnTab": true,
	"emmet.includeLanguages": {
		"blade": "html",
		"vue-html": "html",
		"vue": "html",
		"react": "html",
		"javascript": "html"
	},
	// LANGUAGE SPECIFIC
	"php.suggest.basic": false,
	"php.format.rules.addCommaAfterLastArrayElement": false,
	"php.format.rules.blankLinesAfterOpenTag": 1,
	"php.format.rules.endWithNewLine": true,
	"php.format.rules.spaceBeforeColonInControlStatements": true,
	"php.format.rules.spaceBeforeColonInReturnType": false,
	"php.format.rules.spaceAfterUnaryNot": true,
	// LANGUAGE SPECIFIC
	"javascript.suggest.paths": false,
	"typescript.suggest.paths": false,
	// LANGUAGE SPECIFIC
	"html.format.extraLiners": "nul",
	"vetur.format.options.tabSize": 4,
	"vetur.format.options.useTabs": true,
	// PRETTIER
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	// TAILWIND CSS
	"tailwindCSS.includeLanguages": {
		"plaintext": "html"
	},
	"tailwindCSS.experimental.configFile": null,
	// THIRD-PARTY EXTENSIONS
	// Auto Rename Tag
	"auto-rename-tag.activationOnLanguage": ["*"],
	// Blade formatter
	"blade.format.enable": true,
	"blade.format.wrapAttributes": "auto",
	// Live Server
	"liveServer.settings.CustomBrowser": "firefox",
	// Quokka.js
	"quokka.automaticRestart": true,
	"quokka.fontSize": 16,
	"quokka.showOutputOnStart": false,
	"quokka.useOutputPanel": false,
	// VIM EXTENSION
	"vim.cursorStylePerMode.insert": "block",
	"vim.cursorStylePerMode.visualblock": "block-outline",
	"vim.cursorStylePerMode.visualline": "block-outline",
	"vim.cursorStylePerMode.visual": "block-outline",
	"vim.camelCaseMotion.enable": true,
	"vim.easymotion": true,
	"vim.easymotionDimColor": "#888888",
	"vim.easymotionIncSearchForegroundColor": "#66cc66",
	"vim.easymotionKeys": "asdfghjkl;",
	"vim.easymotionMarkerForegroundColorOneChar": "#ff6666",
	"vim.easymotionMarkerForegroundColorTwoCharFirst": "#ffaa33",
	"vim.easymotionMarkerForegroundColorTwoCharSecond": "#ffdd77",
	"vim.foldfix": true,
	"vim.highlightedyank.color": "#a9dc7660",
	"vim.highlightedyank.enable": true,
	"vim.hlsearch": true,
	"vim.joinspaces": false,
	"vim.leader": "<space>",
	"vim.registers.useClipboard": true,
	"vim.replaceWithRegister": true,
	"vim.searchMatchTextColor": "#bbbbbb",
	"vim.sneak": true,
	"vim.sneakUseIgnorecaseAndSmartcase": true,
	"vim.timeout": 700,
	"vim.useSystemClipboard": true,
	"vim.visualstar": true,
	// "vim.vimrc.path": "/home/viethoang/.vimrc",
	"vim.vimrc.path": "~/.vimrc",
	"vim.vimrc.enable": true,
	"vim.handleKeys": {
		"<C-b>": true,
		"<C-c>": true,
		"<C-d>": true,
		"<C-h>": true,
		"<C-j>": true,
		"<C-m>": true,
		"<C-t>": true,
		"<C-v>": true
	},
	"vim.normalModeKeyBindings": [
		{
			"before": ["K"],
			"commands": ["lineBreakInsert"],
			"silent": true
		},
		{
			"before": ["<leader>", "h"],
			"commands": ["editor.action.showHover"],
			"silent": true
		},
		{
			"before": ["<leader>", "n"],
			"commands": ["explorer.newFile"],
			"silent": true
		},
		{
			"before": ["<leader>", "q"],
			"commands": ["workbench.action.closeActiveEditor"],
			"silent": true
		},
		{
			"before": ["<C-,>"],
			"commands": [
				{
					"command": "cursorEnd"
				},
				{
					"command": "type",
					"args": {
						"text": ","
					}
				}
			]
		},
		{
			"before": ["<A-,>"],
			"commands": [
				{
					"command": "cursorEnd"
				},
				{
					"command": "type",
					"args": {
						"text": ","
					}
				},
				{
					"command": "editor.action.insertLineAfter"
				}
			]
		},
		{
			"before": ["<leader>", "f"],
			"commands": ["editor.action.formatSelection.multiple"]
		}
	],
	"vim.insertModeKeyBindingsNonRecursive": [
		{
			"before": ["<C-,>"],
			"after": ["<Esc>", "A", ",", "a"]
		}
	],
	"vim.visualModeKeyBindingsNonRecursive": [
		{
			"before": ["<leader>", "f"],
			"commands": ["editor.action.formatSelection.multiple"]
		}
	],
	// LANGUAGE FORMATTERS
	"[javascriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[blade]": {
		"editor.defaultFormatter": "shufo.vscode-blade-formatter"
	},
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[vue]": {
		"editor.defaultFormatter": "octref.vetur"
	},
	"[php]": {
		"editor.defaultFormatter": "DEVSENSE.phptools-vscode"
	},
	"[snippets]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	// CUSTOM CSS
	"vscode_custom_css.imports": [
		"file://${userHome}/.config/Code/min.css",
		"file://${userHome}/.config/Code/min.js"
	],
	"vue.autoInsert.dotValue": true,
	"vue.editor.templateInterpolationDecorators": false,
	"vue.format.wrapAttributes": "force-expand-multiline",
	"Laravel.bladeComponent.hover": false,
	"bladeFormatter.format.noMultipleEmptyLines": true,
	"bladeFormatter.misc.dontShowNewVersionMessage": true,
	"bladeFormatter.format.sortHtmlAttributes": "custom",
	"bladeFormatter.format.sortTailwindcssClasses": true,
	"bladeFormatter.format.wrapAttributes": "force-expand-multiline",
	"cSpell.ignoreWords": [
		"alpinejs",
		"enderror",
		"endforeach",
		"endforelse",
		"endif",
		"endisset",
		"endsection",
		"forelse",
		"isset",
		"laravel",
		"linecap",
		"linejoin",
		"vite"
	],
	"splitHTMLAttributes.closingBracketOnNewLine": true,
	"splitHTMLAttributes.sortOrder": [
		[
			"^v-if",
			"^v-else",
			"^v-show",
			"^v-model",
			"^v-for",
			"^:key",
			"^key",
			"^v-",
			"^:",
			"^@click",
			"^@",
			"^id",
			"^class",
			"^.*=\""
		]
	],
	"splitHTMLAttributes.tabSize": 4,
	"workbench.colorCustomizations": {

		"titleBar.activeBackground": "#2e3440",
		"titleBar.activeForeground": "#aeafad",
		"titleBar.inactiveBackground": "#2e3440",
		// "titleBar.inactiveForeground": "#2e3440",
		"titleBar.border": "#2e3440",
		// "editorCursor.background": "#535254",
		// "editorCursor.foreground": "#aeafad",
		// "editor.snippetTabstopHighlightBorder": "#786197",
		// "editor.snippetTabstopHighlightBackground": "#bd93f933",
		// "editor.snippetFinalTabstopHighlightBorder": "#3e9453",
		"editorGroupHeader.tabsBackground": "#2e3440",
		"editorGroup.border": "#2e3440",
		"editorGroupHeader.border": "#2e3440",
		"editorGroupHeader.tabsBorder": "#2e3440",
		"tab.unfocusedActiveBorder": "#2e3440",
		"tab.unfocusedActiveBorderTop": "#2e3440",
		"scrollbar.shadow": "#2e3440",
		"editor.background": "#2e3440",
		"tab.inactiveModifiedBorder": "#2e3440",
		"tab.border": "#2e3440",
		"tab.activeBackground": "#2e3440",
		"tab.activeForeground": "#fff",
		"tab.inactiveForeground": "#b4b4b4",
		"tab.inactiveBackground": "#2e3440",
		"tab.activeBorderTop": "#00000000",
		"tab.activeBorder": "#00000000",
		"statusBar.background": "#2e3440",
		"statusBar.border": "default",
		"statusBar.noFolderBackground": "#2e3440",
		"editorGroup.emptyBackground": "#2e3440",
		"sideBar.background": "#2e3440",
		"sideBar.foreground": "#cecece",
		"sideBar.border": "#2e3440",
		"editorGutter.background": "#2e3440",
		"terminal.background": "#2e3440",
		"panelTitle.activeBorder": "#2e3440",
		"panel.background": "#2e3440",
		"panel.border": "#2e3440",

		"editor.findMatchHighlightBackground": "#00000000",
		"editor.findMatchHighlightBorder": "#444444",
		"editor.findMatchBackground": "#00000000",
		"editor.findMatchBorder": "#796747",
		"editor.wordHighlightBackground": "#1f2b3fc7",
		"editor.wordHighlightBorder": "#233149",
		"editor.wordHighlightStrongBackground": "#ffcc5522",
		"editor.wordHighlightStrongBorder": "#ffcc5517"
	},
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": ["entity.name.function", "variable.function"],
				"settings": {
					"fontStyle": "bold"
				}
			}
		]
	},
	"prettier.singleAttributePerLine": true,
	"vetur.format.defaultFormatter.ts": "vscode-typescript",
	"vetur.format.defaultFormatter.html": "js-beautify-html",
	"[typescriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"workbench.colorTheme": "Nord Pastel",
	"workbench.iconTheme": "quill-icons"
}
